<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.c503.sc.jxwl.vehiclemonitor.dao.IplatformDao" >
  <resultMap id="BaseResultMap" type="com.c503.sc.jxwl.vehiclemonitor.bean.PlatformEntity" >
    <id column="ID" property="id" jdbcType="VARCHAR" />
    <result column="PLATFORM_NAME" property="platformName" jdbcType="VARCHAR" />
    <result column="MAIN_DATA" property="mainData" jdbcType="VARCHAR" />
    <result column="CREATE_BY" property="createBy" jdbcType="VARCHAR" />
    <result column="CREATE_TIME" property="createTime" jdbcType="DATE" />
    <result column="UPDATE_BY" property="updateBy" jdbcType="VARCHAR" />
    <result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="REMOVE" property="remove" jdbcType="CHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    ID, PLATFORM_NAME, MAIN_DATA, CREATE_BY, CREATE_TIME, UPDATE_BY, UPDATE_TIME, REMOVE
  </sql>
  
  <select id="findByParams" resultMap="BaseResultMap" parameterType="com.c503.sc.jxwl.vehiclemonitor.bean.PlatformEntity">
		select
		<include refid="Base_Column_List" />
		from T_PLATFORM
		<where>
		    <if test="platformName != null">
		       AND PLATFORM_NAME like CONCAT(CONCAT('%',#{platformName}), '%')
		     </if>
			<if test="remove != null ">
				AND remove = #{remove, jdbcType=VARCHAR}
			</if>
		</where>
		ORDER BY update_time DESC
	</select>
</mapper>