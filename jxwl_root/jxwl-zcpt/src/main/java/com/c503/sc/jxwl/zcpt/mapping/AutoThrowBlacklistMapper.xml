  <select id="findExsist" resultMap="BaseResultMap">
  	SELECT * FROM T_BLACKLIST_MANAGE T WHERE T.VEHICLE = #{carrierName}
  	AND T.REMOVE = '0'
  </select>
  
</mapper>
