<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.c503.sc.jxwl.zcpt.dao.ILimitAreaDao">
  <resultMap id="BaseResultMap" type="com.c503.sc.jxwl.zcpt.bean.LimitArea" >
    <id     column="ID"          property="id"         jdbcType="VARCHAR" />
    <result column="POINTS"      property="points"     jdbcType="CLOB" />
    <result column="LIMIT_NAME"  property="limitName"  jdbcType="VARCHAR" />
    <result column="LIMIT_TYPE"  property="limitType"  jdbcType="VARCHAR" />
    <result column="LIMIT_SPEED" property="limitSpeed" jdbcType="DECIMAL" />
    <result column="REMOVE"      property="remove"     jdbcType="CHAR" />
    <result column="CREATE_BY"   property="createBy"   jdbcType="VARCHAR" />
    <result column="CREATE_TIME" property="createTime" jdbcType="DATE" />
  </resultMap>


  <insert id="save" parameterType="com.c503.sc.jxwl.zcpt.bean.LimitArea">
    INSERT INTO T_LIMIT_AREA (
      ID, POINTS, LIMIT_NAME, LIMIT_TYPE, REMOVE, CREATE_TIME
      <if test="createBy != null" >
        , CREATE_BY
      </if>
      <if test="limitSpeed != null" >
        , LIMIT_SPEED
      </if> )
    VALUES (
      #{id}, #{points}, #{limitName}, #{limitType}, '0', SYSDATE
      <if test="createBy != null" >
        , #{createBy}
      </if>
      <if test="limitSpeed != null" >
        , #{limitSpeed,jdbcType=DECIMAL}
      </if> )
  </insert>
	
	
  <delete id="delete" parameterType="java.lang.String">
    UPDATE T_LIMIT_AREA SET 
      REMOVE = '1'
    WHERE ID = #{value}
  </delete>
  
  
  <select id="findAllAreaLimit" resultMap="BaseResultMap">
    SELECT ID, 
           POINTS,
           LIMIT_NAME,
           LIMIT_TYPE,
           LIMIT_SPEED
      FROM T_LIMIT_AREA
     WHERE REMOVE = '0'
  </select>
  
  
  <select id="findByLimitAreaId" parameterType="String" resultMap="BaseResultMap">
    SELECT * 
      FROM T_LIMIT_AREA
     WHERE ID = #{id}
  </select>
  
  <update id="update" parameterType="com.c503.sc.jxwl.zcpt.bean.LimitArea">
    UPDATE T_LIMIT_AREA SET
      LIMIT_NAME  = #{limitName},
      LIMIT_TYPE  = #{limitType},
      LIMIT_SPEED = #{limitSpeed, jdbcType=DECIMAL},
      UPDATE_BY   = #{updateBy,   jdbcType=VARCHAR},
      UPDATE_TIME = SYSDATE
    WHERE ID = #{id}
  </update>
  
</mapper>